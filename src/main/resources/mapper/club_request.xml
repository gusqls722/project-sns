<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.sns.sp.CLUBREQUEST">
  <select id="CLUBREQUESTLIST" resultType="clubRequest">
		select * from club_request;
	</select>
	
	<insert id="insertCLUBREQUEST" parameterType="clubRequest">
		insert into club_request(acceptdat,requestdat,status,clubno,userid)
		values(#{acceptdat},#{requestdat},#{status},#{clubno},#{userid})
	</insert>
	
	<update id="updateCLUBREQUEST" parameterType="clubRequest">
		update club_request
		<set>
			<if test="acceptdat!=null">acceptdat=#{acceptdat},</if>
			<if test="requestdat!=null">requestdat=#{requestdat},</if>
			<if test="status!=null">status=#{status},</if>
			<if test="clubno!=null">clubno=#{clubno},</if>
			<if test="userid!=null">userid=#{userid},</if>
			where clubreqno=#{clubreqno}
		</set>
	</update>
	
	<delete id="deleteCLUBREQUEST" parameterType="int">
		delete from club_request where clubreqno=#{clubreqno}
	</delete>
</mapper>